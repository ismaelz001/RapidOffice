# Server Config
PROJECT_NAME="RapidOffice + Quote API"
VERSION="1.0.0"
API_V1_STR="/api/v1"

# Security
# Generate one with: openssl rand -hex 32
SECRET_KEY="change-me-at-production-please-use-a-strong-secret"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Database
# Neon Postgres URL (Async)
DATABASE_URL="postgresql+asyncpg://user:pass@ep-hostname.region.aws.neon.tech/neondb?ssl=require"

# Business Logic
TAX_RATE=0.21

# CORS - Add your Vercel URL here
CORS_ORIGINS=["http://localhost:3000", "https://rapid-office.vercel.app"]
